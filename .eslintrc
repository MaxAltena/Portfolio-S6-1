{
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"env": {
		"node": true,
		"browser": true,
		"es6": true
	},
	"extends": ["eslint:recommended"],
	"plugins": ["svelte3"],
	"overrides": [
		{
			"files": ["**/*.svelte"],
			"processor": "svelte3/svelte3"
		}
	],
	"rules": {
		"linebreak-style": ["warn", "unix"]
	}
}
